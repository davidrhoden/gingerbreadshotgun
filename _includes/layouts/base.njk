<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
	{% include "components/head.njk" %}

	<body class="{% if pageType %}{{ pageType }}{% endif %} {{ page.fileSlug }} {{ pageClasses }}">

        <header>
            <div class="flex align-items-center space-between full-width">
                <div class="main-link-container">
                    <a class="main-link" href="{{ '/' | url }}"><em>{{ metadata.title }}</em></a>
                </div>
                <div class="mobile-menu">
                    <button class="hamburger hamburger--squeeze" aria-label="Menu" aria-controls="primary-menu" aria-expanded="false" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            {% include "components/nav.njk" %}
        </header>

		<main>
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
